@model EverPresent.Models.MogwaiModel

@{
    /**/

    ViewBag.Title = "Create";
}

<!-- Creation of a new Mogwai -->
<div class="container">
    <div class="row">
        <h2>Create Mogwai</h2>
        <br />
        <br />

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Id)

            <div class="row">
                <div class="col-sm-3 text-right">
                    @Html.DisplayNameFor(m => m.Name)
                </div>
                <div class="col-sm-4">
                    @Html.EditorFor(m => m.Name)
                    @Html.ValidationMessageFor(m => m.Name)
                </div>
            </div>

            <div class="row">
                <div class="col-sm-3 text-right">
                    @Html.DisplayNameFor(m => m.Description)
                </div>
                <div class="col-sm-4">
                    @Html.EditorFor(m => m.Description)
                    @Html.ValidationMessageFor(m => m.Description)
                </div>
            </div>

            <div class="row">
                <div class="col-sm-3 text-right">
                    @Html.DisplayNameFor(m => m.Uri)
                </div>
                <div class="col-sm-4">
                    @Html.EditorFor(m => m.Uri)
                    @Html.ValidationMessageFor(m => m.Uri)
                </div>
            </div>

            <div class="row">
                <div class="col-sm-3 text-right">
                    @Html.DisplayNameFor(m => m.Family)
                </div>
                <div class="col-sm-4">
                    @Html.EditorFor(m => m.Family)
                    @Html.ValidationMessageFor(m => m.Family)
                </div>
            </div>

            <div class="row">
                <div class="col-sm-3 text-right">
                    @Html.DisplayNameFor(m => m.Cost)
                </div>
                <div class="col-sm-4">
                    @Html.EditorFor(m => m.Cost)
                    @Html.ValidationMessageFor(m => m.Cost)
                </div>
            </div>

            <div class="row">
                <div class="col-sm-3 text-right">
                    @Html.DisplayNameFor(m => m.Rarity)
                </div>
                <div class="col-sm-4">
                    @Html.EditorFor(m => m.Rarity)
                    @Html.ValidationMessageFor(m => m.Rarity)
                </div>
            </div>

            <div class="row">
                <div class="col-sm-3 text-right">
                    @Html.DisplayNameFor(m => m.Level)
                </div>
                <div class="col-sm-4">
                    @Html.EditorFor(m => m.Level)
                    @Html.ValidationMessageFor(m => m.Level)
                </div>
            </div>

            <br />
            <br />
            <div class="row">
                <div class="col-sm-3 text-right">
                </div>
                <div class="col-sm-4">
                    @Html.ActionLink("Cancel", "Index", new { id = Model.Id }, new { @class = "btn btn-success" })
                    <input type="submit" value="Create" class="btn btn-primary">
                </div>
            </div>
        }
    </div>
</div>

