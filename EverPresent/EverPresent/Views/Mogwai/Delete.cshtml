@model EverPresent.Models.MogwaiModel

@{
    ViewBag.Title = "Delete";
}

<!-- Deletion of a Mogwai -->
<div class="container">
    <div class="row">

        @{
            if (Model == null)
            {
                <p>No Mogwai</p>
            }

            else
            {
                <div class="row">
                    <h2>Delete Mogwai</h2>
                    <br />
                    <br />

                    <div class="row">
                        <div class="col-sm-3 text-right">
                        </div>
                        <div class="col-sm-4">
                            <img src="~/image/@Model.Uri" class="mogwaiSizeSmall" />
                            <br />
                            <span>
                                @Model.Name
                                <br />
                                <br />
                                <br />
                            </span>
                        </div>
                    </div>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.Id)
                        @Html.HiddenFor(m => m.Name)
                        @Html.HiddenFor(m => m.Description)
                        @Html.HiddenFor(m => m.Uri)
                        @Html.HiddenFor(m => m.Family)
                        @Html.HiddenFor(m => m.Cost)
                        @Html.HiddenFor(m => m.Rarity)
                        @Html.HiddenFor(m => m.Level)

                        <div class="row">
                            <div class="col-sm-3 text-right">
                            </div>
                            <div class="col-sm-4">
                                @Html.ActionLink("Cancel", "Index", new { id = Model.Id }, new { @class = "btn btn-success" })
                                <input type="submit" value="Delete" class="btn btn-danger">
                            </div>
                        </div>
                    }
                </div>
            }
        }
    </div>
</div>
