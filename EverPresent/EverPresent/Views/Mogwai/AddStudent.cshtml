@model EverPresent.Models.MogwaiModel


@{
    ViewBag.Title = "AddStudent";
}

<img src="~/image/Kiosk_Create_Stud.png" alt="Create Student" class="center-block" />

<div class="container">
    <div class="row">
        <h2>Create Student</h2>
        <br />
        <br />

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Id)

            <div class="row">
                <div class="col-sm-3 text-right">
                    @Html.DisplayNameFor(m => m.Name)
                </div>
                <div class="col-sm-2">
                    @Html.EditorFor(m => m.Name)
                    @Html.ValidationMessageFor(m => m.Name)
                </div>
            </div>

            <div class="row">
                <div class="col-sm-3 text-right">
                    @Html.DisplayNameFor(m => m.Id)
                </div>
                <div class="col-sm-2">
                    @Html.DropDownListFor(m => m.Id, EverPresent.Backend.MogwaiBackend.Instance.GetMogwaiListItem(Model.Id))
                    @Html.ValidationMessageFor(m => m.Id)
                </div>
            </div>

            <br />
            <br />
            <div class="row">
                <div class="col-sm-3 text-right">
                </div>
                <div class="col-sm-4">
                    @Html.ActionLink("cancel", "Index", "Roster", new { id = Model.Id }, new { @class = "btn btn-success" })
                    <input type="submit" value="Create" class="btn btn-primary">
                </div>
            </div>
        }
    </div>
</div>




