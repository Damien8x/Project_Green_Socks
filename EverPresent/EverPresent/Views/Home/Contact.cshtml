
@model EverPresent.Models.ContactModel

<div id="login">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <h3 class="login-title text-center loginHeader">Contact</h3>
                <div class="account-wall">

                    @using (Html.BeginForm())
                    {
                        <div id="editStudent" class="container-fluid text-center contactFormTop">
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(m => m.Id)


                            <div class="row contactNameField" >
                                <div class="col-sm-3 text-right">
                                    @Html.DisplayNameFor(m => m.Name)
                                </div>
                                <div class="col-sm-2">
                                    @Html.EditorFor(m => m.Name)
                                    @Html.ValidationMessageFor(m => m.Name)
                                </div>
                            </div>

                            <div class="row contactEmailField">
                                <div class="col-sm-3 text-right">
                                    @Html.DisplayNameFor(m => m.Email)
                                </div>
                                <div class="col-sm-2">
                                    @Html.EditorFor(m => m.Email)
                                    @Html.ValidationMessageFor(m => m.Email)
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-3 text-right">
                                    @Html.DisplayNameFor(m => m.Message)
                                </div>
                                <div class="col-sm-2">
                                    @Html.TextAreaFor(m => m.Message, new { @style = "width:300px; height:150px;" })
                                    @Html.ValidationMessageFor(m => m.Message)
                                </div>
                            </div>

                            <div>
                                <br />
                                <button class="btn btn-info" type="submit" >
                                    Submit
                                </button>
                            </div>
                        </div><!-- /.container -->
                    }
                </div>
            </div>
        </div>
    </div>
</div>
