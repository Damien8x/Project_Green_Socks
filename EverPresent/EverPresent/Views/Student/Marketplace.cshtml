
@{
    Layout = "~/Views/Shared/_StudentLayout.cshtml";


}


<img style="margin-left:auto; margin-right:auto; display:block; width:100% "src="~/image/Mogwai_market_banner.PNG" alt="banner" />

<div class="bs-example">
    <div style="margin-top:15%;" id="myCarousel" data-interval="false" class="carousel slide" data-ride="carousel">
        <!-- Carousel indicators -->
        <!-- Wrapper for carousel items -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/image/pokemon-6.svg" alt="First Slide" height="300">
                <div class="carousel-caption">
                    <button id="btn1" type="button" class="btn-market">Crossfire<br />Cost: 100 Tokens</button>
                </div>
            </div>
            <div class="item">
                <img src="~/image/pokemon_duck.svg" alt="Second Slide" height="300">
                <div class="carousel-caption">
                    <button id="btn2" type="button" class="btn-market">Taco Taco<br />Cost: 50 Tokens</button>
                </div>
            </div>
            <div class="item">
                <img src="~/image/pokemon_bee.svg" alt="Third Slide" height="300">
                <div class="carousel-caption">
                    <button id="btn3" type="button" class="btn-market">Atomic Robot<br />Cost: 25 Tokens</button>
                </div>

            </div>
            <div class="item">
                <img src="~/image/pokemon_old_guy.svg" alt="Third Slide" height="300">
                <div class="carousel-caption">
                    <button id="btn4" type="button" class="btn-market">Stratagram<br />Cost: 200 Tokens</button>
                </div>
            </div>
        </div>
        <!-- Carousel controls -->
        <a class="carousel-control left" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="carousel-control right" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
    </div>
</div>

<div style="text-align:center; font-size:larger" class="col-md-3 col-md-offset-6">
    <h4 id="clicked">Current Tokens: 500 </h4>
</div>

<script>


    var token = 500;


    document.getElementById("btn1").addEventListener("click", myFunction);
    function myFunction() {
        if (token >= 100) {
            alert("Mogwai Obtained!");
            token = token - 100;
            document.getElementById("clicked").innerHTML = "Current Tokens: " + token;
        }
        else
            alert("Need More Tokens");
    }

    document.getElementById("btn2").addEventListener("click", myF);
    function myF() {
        if (token >= 50) {
            alert("Mogwai Obtained!");
            token = token - 50;
            document.getElementById("clicked").innerHTML = "Current Tokens: " + token;
        }
        else
            alert("Need More Tokens");
    }


    document.getElementById("btn4").addEventListener("click", myFun);
    function myFun() {
        if (token >= 200) {
            alert("Mogwai Obtained!");
            token = token - 200;
            document.getElementById("clicked").innerHTML = "Current Tokens: " + token;
        }
        else
            alert("Need More Tokens");
    }
    document.getElementById("btn3").addEventListener("click", myFunk);
    function myFunk() {
        if (token >= 25) {
            alert("Mogwai Obtained!");
            token = token - 25;
            document.getElementById("clicked").innerHTML = "Current Tokens: " + token;
        }
        else
            alert("Need More Tokens");
    }

</script>


