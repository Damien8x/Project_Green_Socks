@model EverPresent.Models.MogwaiViewModel

@{
    var studentBackend = EverPresent.Backend.StudentDataSourceMock.Instance;
    var studentAndrew = studentBackend.Read("1");
}

<!-- Show what Mogwai they earned today-->
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <h3>Mogwai Earned Today...</h3>
        </div>
        <span class="pull-right">
            <button type="button" onclick="location.href='@Url.Action("Marketplace", "Student", null)'" class="btn btn-success">
                <h4>Current Tokens: @studentAndrew.Tokens</h4>
            </button>
        </span>
    </div>
    <div class="row">
        <div class="col-md-2 col-md-offset-5">
            <div class="mogwai-info">
                <img src="~/image/avatar4.png" class="mogwaiSizeSmall" />
                <br />
                <br />
                <b>Loki</b>
                <br />
                <b>Family: Odin</b>
                <br />
                <b>Rarity: 5</b>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row text-center">
        <h2>My Mogwai Collection</h2>
    </div>
    <br />
    <div class="row">
        @{
            if (Model.MogwaiList == null || !Model.MogwaiList.Any())
            {
                <br />
                <p>No Mogwai in the System</p>
                <br />
            }
            else
            {
                foreach (var item in Model.MogwaiList)
                {
                    // Create a 'collection' for Andrew
                    if (item.Name == "Loki" || item.Name == "Vili" || item.Name == "Frigg" || item.Name == "Jord" || item.Name == "Sif" | item.Name == "Burr")
                    {
                        <div class="col-sm-2">
                            <img src="~/image/@item.Uri" class="mogwaiSizeSmall" />
                            <br />
                            <div class="mogwai-info">
                                <span>
                                    <br />
                                    <b>@item.Name</b>
                                    <br />
                                    <b>Family: @item.Family</b>
                                    <br />
                                    <b>Rarity: @item.Rarity</b>
                                    <br />
                                    <b>Current Level: @item.Level</b>
                                    <br />
                                    <br />
                                    <button type="button" class="btn btn-info">Level Up</button>
                                    <br />
                                </span>
                            </div>
                        </div>
                    }
                }
            }
        }
    </div>
</div>
<br />
