@model EverPresent.Models.StudentModel

@{
    ViewData["Title"] = "StudentHome";
}

<head>
    <!-- Plotly.js -->
    <script src="https://cdn.plot.ly/plotly-latest.min.js"></script>
    <!-- Numeric JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/numeric/1.2.6/numeric.min.js"></script>
</head>

<div id="login" style="display:block">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <h3 class="login-title text-center" style="margin-top:100px; margin-bottom: 30px">Sign into EverPresent</h3>
                <div class="account-wall">
                    <form class="form-signin">
                        <input type="text" class="form-control center-block" style="margin-bottom: 20px" placeholder="Username" required autofocus>
                        <input type="password" class="form-control center-block" style="margin-bottom: 20px" placeholder="Password" required>
                        <button class="btn btn-primary center-block" style="background-color:#333; margin-bottom:50px" onclick="changeView()">
                            Login
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function changeView() {
        document.getElementById("showStudentHome").style.display = "block";
        document.getElementById("login").style.display = "none";
    }
</script>

<div id="showStudentHome" style="display:none">

    <!-- Student header of page-->
    <div class="container text-center">
        <div class="row">
            <div class="col-md-4 col-md-offset-2">
                <h2> Welcome, @Model.Name  </h2>
                <p> <img src="~/image/@Model.AvatarId" class="studentIndexAvatar mogwaiSizeSmall" /></p>
            </div>
            <div class="col-md-4">
                <h2>Today's Attendance</h2>
                <h3>Time In: 8:54am</h3>
                <h3>Time Out: _____</h3>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row text-center" style="margin-top:30px"><h2>Mogwai Reports</h2></div>
        <div class="row text-center" style="margin-top:20px; margin-bottom:20px"><h4>Current Tokens: @Html.DisplayFor(m => m.Tokens)</h4></div>
    </div>

    <!-- Show Students Mogwai Graphs -->
    <div class="container" style="margin-bottom:30px">
        <div class="row">
            <div class="col-md-4">
                <div class="well">
                    <h3>Aegir Family Collection</h3>
                    <img src="~/image/AegirFamilyPieChart.png" class="img-responsive" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="well">
                    <h3>Odin Family Collection</h3>
                    <img src="~/image/collectionGraph.png" class="img-responsive" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="well">
                    <h3>Tyr Family Collection</h3>
                    <img src="~/image/TyrFamilyPieChart.png" class="img-responsive" />
                </div>
            </div>
        </div>
        <div class="row">
            <br />
            <div class="col-md-6">
                <div class="well">
                    <h3>Token Account History</h3>
                    <img src="~/image/BankAccountSimple1200Tokens.png" class="img-responsive" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="well">
                    <h3>Mogwai Purchased by Month</h3>
                    <img src="~/image/MogwaiBuyChartMay30.png" class="img-responsive" />
                </div>
            </div>
        </div>
    </div>

    <div id="showGraphs" style="display:none">
        @*Display line graph*@
        <div id="myDiv"><!-- Plotly chart will be drawn inside this DIV --></div>
    </div>

    @*Open Attendance History button*@
    <button class="btn btn-default" onclick="showGraph()">
        Attendance History
    </button>

    @*Close grpah button*@
    <button id="graphCloseButton" class="btn btn-default" onclick="closeGraph()" style="visibility:hidden">
        Close
    </button>

    @*Generate Report button*@
    <button id="print" class="btn btn-default" onclick="printContent('showGraphs');" style="visibility:hidden">Print Attendance</button>

</div>


<script>
    function showGraph() {
        document.getElementById('showGraphs').style.display = 'block';
        document.getElementById('graphCloseButton').style.visibility = 'visible';
        document.getElementById('print').style.visibility = 'visible';
    }
    function closeGraph() {
        document.getElementById('showGraphs').style.display = 'none';
        document.getElementById('graphCloseButton').style.visibility = 'hidden';
        document.getElementById('print').style.visibility = 'hidden';
    }
</script>

<script>
    function printContent(el) {
        var restorepage = $('body').html();
        var printcontent = $('#' + el).clone();
        $('body').empty().html(printcontent);
        window.print();
        $('body').html(restorepage);
    }

    var n = 6;
    var yData = [];
    var xData = [1, 2, 3, 4, 5, 6];
    var avg = [100, 90, 95, 88, 80, 94];

    var months = ['January', 'February', 'March', 'April', 'May', 'June'];

    // randomize points on line graph
    for (i = 0; i < n; i++) {
        yData[i] = Math.random() * 100;
    }

    var data = [];

    for (var i = 0; i < xData.length; i++) {
        var result = {
            x: xData[i],
            y: yData[i],
            type: 'scatter'
        };
        var result2 = {
            x: xData[i],
            y: avg[i],
            type: 'scatter'
        };
        data.push(result, result2);
    }

    var StudentAttendance = {
        x: xData,
        y: yData,
        type: 'scatter',
        name: 'Student Attendance'
    };
    var AverageAttendance = {
        x: xData,
        y: avg,
        type: 'scatter',
        name: 'Average Attendance'
    };
    var data = [AverageAttendance, StudentAttendance];

    var layout = {
        title: 'Student Attendance',
        xaxis: {
            title: 'Months',
            tickvals: xData,
            ticktext: months
        },
        yaxis: {
            title: 'Attendance Percentage'
        }
    };

    //plot the data for the line graph

    Plotly.newPlot('myDiv', data, layout);

    var data = [{
        values: [85, 15],
        labels: ['85%', '15%'],
        domain: {
            x: [0, .48]
        },
        name: 'Attendance',
        text: 'Attendance',
        textposition: 'inside',
        hoverinfo: 'label+percent+name',
        hole: .4,
        type: 'pie'
    }, {
        values: [25, 75],
        labels: ['25%', '75%'],
        domain: { x: [.52, 1] },
        name: 'On Time',
        text: 'On Time',
        textposition: 'inside',
        hoverinfo: 'label+percent+name',
        hole: .4,
        type: 'pie'
    }];

    var layout = {
        annotations: [
            {
                font: {
                    size: 13
                },
                showarrow: false,
                x: 0.16,
                y: 0.5,
                text: 'Attendance'
            },
            {
                font: {
                    size: 13
                },
                showarrow: false,
                x: 0.81,
                y: 0.5,
                text: 'On Time'
            }
        ]
    };
    // plot the data for the pie charts
    Plotly.newPlot('secondDiv', data, layout);
</script>



