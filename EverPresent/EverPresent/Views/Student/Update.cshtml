@model EverPresent.Models.StudentModel

<div class="container">
    <div class="row">
        <h2>Update Avatar</h2>
        <br />
        <br />
        <img src="~/image/@Model.AvatarId" class="mogwaiSizeSmall" />
        <br />
        <br />
    </div>
    
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.Status)
        @Html.HiddenFor(m => m.Tokens)
        @Html.HiddenFor(m => m.Name)

        <div class="row">
            <b>@Html.DisplayNameFor(m => m.AvatarId)</b>
        </div>
        <div class="row">
            @Html.DropDownListFor(m => m.AvatarId, new SelectList(
                                new List<Object>{
                                new { value = "avatar0.png" , text = "Jord"  },
                                new { value = "avatar1.png" , text = "Freya"  },
                                new { value = "avatar2.png" , text = "Hodr"  },
                                new { value = "avatar3.png" , text = "Vili"  },
                                new { value = "avatar4.png" , text = "Loki"  },
                                new { value = "avatar5.png" , text = "Frigg"  },
                                new { value = "avatar6.png" , text = "Sif"  },
                                new { value = "avatar7.png" , text = "Burr" }
                                },
                                "value",
                                "text",
                                Model.AvatarId),
                                new { @style = "width: 180px;" })
            @Html.ValidationMessageFor(m => m.AvatarId)
        </div>
        <br />
        <div class="row">
            <input type="submit" value="Submit" class="btn btn-primary">
        </div>
    }
</div>


