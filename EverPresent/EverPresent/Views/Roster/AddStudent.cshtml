@model EverPresent.Models.StudentModel


@{
    ViewBag.Title = "AddStudent";
}

    <img src="~/image/Kiosk_Create_Stud.png" alt="Create Student" class="center-block" />

    <div class="container">
        <div class="row">
            <h2>Create Student</h2>
            <br />
            <br />

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)

                <div class="row">
                    <div class="col-sm-3 text-right">
                        @Html.DisplayNameFor(m => m.Name)
                    </div>
                    <div class="col-sm-2">
                        @Html.EditorFor(m => m.Name)
                        @Html.ValidationMessageFor(m => m.Name)
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-3 text-right">
                        @Html.DisplayNameFor(m => m.AvatarId)
                    </div>
                    <div class="col-sm-2">
                        @Html.DropDownListFor(m => m.AvatarId, EverPresent.Backend.MogwaiBackend.Instance.GetMogwaiListItem(Model.Id))
                        @Html.ValidationMessageFor(m => m.AvatarId)
                    </div>
                </div>

                <br />
                <br />
                <div class="row">
                    <div class="col-sm-3 text-right">
                    </div>
                    <div class="col-sm-4">
                        @Html.ActionLink("Cancel", "Index", new { id = Model.Id }, new { @class = "btn btn-success" })
                        <input type="submit" value="Create" class="btn btn-primary">
                    </div>
                </div>
            }
        </div>
    </div>


    
    <div class="col-md-2 col-md-offset-5" display="inline">
        @Html.ActionLink("Submit", "Index", "Roster", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "btn btn-default" })
        @Html.ActionLink("Cancel", "Index", "Roster", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "btn btn-default" })
   </div>


