
@{
    ViewBag.Title = "Login";
}

<div id="login">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <h3 class="login-title text-center loginHeader">Sign into EverPresent</h3>
                <div class="account-wall">
                    <form class="form-signin">
                        <input type="text" class="form-control center-block loginFields" placeholder="Username" required autofocus>
                        <input type="password" class="form-control center-block loginFields" placeholder="Password" required>
                        @Html.ActionLink("Login", "Index", "Admin", routeValues: null, htmlAttributes: new
                        {
                            id = "registerLink",
                            @class = "btn btn-primary center-block",
                            @style = "background-color:#333; margin-bottom:50px; width:18%"
                        })
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

