            {
                <br />
                <p>No Mogwai in the System</p>
                <br />
            }
            else
            {

                foreach (var item in Model.StudentList)
                {

                    <div class="col-sm-2">
                        @{ count++; string id = "id" + count;}
                        <p id="@id"> <img src="~/image/@item.AvatarId" width="75" height="75" /></p>

                        <br />
                        <span>
                            @item.Name
